<div class='creation-page'>
  <h2>Add a Movie</h2>
  <form method='POST'>
    Title:
    <br />
    <input class='form-control' type='text' name='title' />
    <br />
    Genre:
    <br />
    <input class='form-control' type='text' name='genre' />
    <br />
    Plot:
    <br />
    <input class='form-control' type='text' name='plot' />
    <br />
    Cast:
    <select class='form-select' name='cast' multiple>
      {{#each allCelebrities}}
        <option value='{{_id}}'>{{name}}</option>

      {{/each}}

    </select>
    <button class='btn btn-primary'>Submit</button>
  </form>
</div>

